#:import layout_exemples layout_exemples
#:import widget_exemples widget_exemples
#:import navigation_screen_manager navigation_screen_manager
#:import boxlayout_with_action_bar boxlayout_with_action_bar

<MenuPrincipal@BoxLayout>:
    orientation: "vertical"
    Button:
        text: "layouts"
        on_press: app.manager.push("LayoutsExempleTabs")
    Button:
        text: "Widgets"
        on_press: app.manager.push("WidgetExemple")
    Button:
        text: "Images"
        on_press: app.manager.push("ImagesExemple")

<MyScreenManager>:
    Screen:
        name: "Menu principal"
        MenuPrincipal:
    Screen:
        name: "ImagesExemple"
        BoxLayoutWithActionBar:
            title: "Images"
            ImagesExemple
    Screen:
        name: "WidgetExemple"
        BoxLayoutWithActionBar:
            title: "WidgetExemple"
            WidgetExemple:
    Screen:
        name: "LayoutsExempleTabs"
        BoxLayoutWithActionBar:
            title: "PageLayoutExemple"
            LayoutsExempleTabs:













